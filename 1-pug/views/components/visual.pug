- var cantProductos = productos.length

.container.mt-5
  .row.col-12.col-md-7 
    if cantProductos > 0
      table.table.align-middle.table-dark.table-striped.table-bordered.text-center
        thead
          tr
            th(scope='col') Nombre
            th(scope='col') Precio
            th(scope='col') Imagen
        tbody
          each producto in productos
            tr
              td= producto.title
              td= producto.price
              td
                .text-center.wd-100
                  .card(style='width: 4rem; margin-left: auto; margin-right: auto;')
                    img.card-img-top.mx-auto.d-block(src= producto.thumbnail alt='...')
    else
      .alert.alert-warning(role='alert')
        | No se encontraron productos
